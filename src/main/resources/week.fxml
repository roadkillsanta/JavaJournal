<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <root>
      <VBox alignment="TOP_CENTER" prefWidth="960.0">
         <children>
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
               <children>
                  <TextField fx:id="weekName" maxHeight="-Infinity" maxWidth="-Infinity" text="Week 1">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </TextField>
                  <Region prefWidth="280.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="settingsButton" mnemonicParsing="false" text="Settings" />
                  <Region prefWidth="380.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Region>
                  <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" textFill="RED">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="boxSun" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="135.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Sunday">
                           <font>
                              <Font name="Comic Sans MS Bold" size="18.0" />
                           </font></Label>
                     </children>
                  </VBox>
                  <VBox fx:id="boxMon" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="135.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Monday">
                           <font>
                              <Font name="Comic Sans MS Bold" size="18.0" />
                           </font></Label>
                     </children>
                  </VBox>
                  <VBox fx:id="boxTue" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="135.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Tuesday">
                           <font>
                              <Font name="Comic Sans MS Bold" size="18.0" />
                           </font></Label>
                     </children>
                  </VBox>
                  <VBox fx:id="boxWed" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="135.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Wednesday">
                           <font>
                              <Font name="Comic Sans MS Bold" size="18.0" />
                           </font></Label>
                     </children>
                  </VBox>
                  <VBox fx:id="boxThu" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="135.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Thursday">
                           <font>
                              <Font name="Comic Sans MS Bold" size="18.0" />
                           </font></Label>
                     </children>
                  </VBox>
                  <VBox fx:id="boxFri" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="135.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Friday">
                           <font>
                              <Font name="Comic Sans MS Bold" size="18.0" />
                           </font></Label>
                     </children>
                  </VBox>
                  <VBox fx:id="boxSat" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="135.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Saturday">
                           <font>
                              <Font name="Comic Sans MS Bold" size="18.0" />
                           </font></Label>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets right="2.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </root>
</Scene>
